{
  "name": "kaichathub",
  "version": "1.5.2",
  "description": "一站式 AI 大模型聊天应用，整合元宝、文心一言、豆包、DeepSeek、Kimi、通义千问、ChatGPT、Gemini、Claude",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:win:x64": "electron-builder --win --x64 --publish never",
    "build:win:x64:zip": "npm run build:win:x64 && zip -j dist/KaiChatHub-Setup-${npm_package_version}-x64-win.zip dist/KaiChatHub-Setup-${npm_package_version}-x64-win.exe",
    "build:linux": "electron-builder --linux"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.kaichathub.app",
    "productName": "KaiChatHub",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon.icns"
    },
    "win": {
      "icon": "assets/icon.ico",
      "artifactName": "KaiChatHub-Setup-${version}-x64-win.${ext}"
    },
    "linux": {
      "icon": "assets/icon.png"
    }
  }
}